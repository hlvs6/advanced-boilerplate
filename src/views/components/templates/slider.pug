script(type="text/x-template")#slider
    .slider-wrap
        sliderSelectInfo(:work="currentWork")
        .slider
            selectSlide(:work="currentWork")
            sliderBtns

script(type="text/x-template")#slider-select-info
    .slider-info
        .slider-info__title {{ work.title }}

script(type="text/x-template")#selectSlide
    img(:src="work.photo", alt="").slider__main-slide

script(type="text/x-template")#sliderBtns
    .slider__wrap-btn
        .slider__control.slider__control--left(@click="slide('next')") 1
        .slider__control.slider__control--right(@click="slide('prev')") 2
